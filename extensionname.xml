<?xml version="1.0" encoding="utf-8"?>
<!--
Custom quickicon template based on the official joomlaupdate quickicon plugin.
Replace all instances of 'extensionname' with a unique name, preserving case.
-->
<extension version="2.5" type="plugin" group="quickicon">
	<name>plg_quickicon_extensionname</name>
	<author></author>
	<creationDate></creationDate>
	<copyright></copyright>
	<license></license>
	<authorUrl></authorUrl>
	<authorEmail></authorEmail>
	<version>1.0</version>
	<description>PLG_QUICKICON_EXTENSIONNAME_XML_DESCRIPTION</description>
	<files>
		<filename plugin="extensionname">extensionname.php</filename>
		<filename>index.html</filename>
		<filename>icon.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_quickicon_extensionname.ini</language>
		<language tag="en-GB">en-GB.plg_quickicon_extensionname.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="context"
					type="text"
					default="mod_quickicon"
					description="PLG_QUICKICON_EXTENSIONNAME_GROUP_DESC"
					label="PLG_QUICKICON_EXTENSIONNAME_GROUP_LABEL"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
